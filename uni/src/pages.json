{
  "easycom": {
    "autoscan": true,
    // 注意一定要放在custom里，否则无效，https://ask.dcloud.net.cn/question/131175
    "custom": {
      "^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
      "^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      }
    },
    {
      "path": "pages/user/login",
      "style": {
        "navigationBarTitleText": "login"
      }
    },
    {
      "path": "pages/user/user",
      "style": {
        "navigationBarTitleText": "user"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#999999",  // 未选中时的文字颜色
    "selectedColor": "#3cc51f",  // 选中时的文字颜色
    "borderStyle": "black",  // TabBar 边框的颜色
    "backgroundColor": "#ffffff",  // TabBar 背景颜色
    "list": [
      {
        "pagePath": "pages/index/index",  // 页面路径
        "text": "首页",  // TabBar 显示的文字
        "iconPath": "static/logo.png",  // 未选中时的图标路径
        "selectedIconPath": "static/logo.png"  // 选中时的图标路径
      },
      {
        "pagePath": "pages/user/user",
        "text": "个人中心",
        "iconPath": "static/logo.png",
        "selectedIconPath": "static/logo.png"
      }
    ]
  }
}
